@page "/users-list"
@using UsersManagement.Client.Services;
@using UsersManagement.Shared.Models
@inject NavigationManager navigation;
@inject IJSRuntime JsRuntime

<div class="container">
    <div class="row">
        <p><a class="btn btn-success fload-end" href="/add-user">Add New User</a></p>
        <div class="col-md-12">
            <div class="card">
                <div class="card-header"></div>
                @if (!AllUsers.Any())
                {
                    <p><em> Nothing to Show </em></p>
                }
                @if (AllUsers.Any())
                {

                    <div class="card-body">
                        <table class="table table-striped table-hover">
                            <thead>
                                <tr>
                                    <th>Id</th>
                                    <th>FirstName</th>
                                    <th>MiddleName</th>
                                    <th>LastName</th>
                                    <th>Email</th>
                                    <th>PhoneNumber</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var user in AllUsers)
                                {
                                    <tr>

                                        <td>@user.Id</td>
                                        <td>@user.FirstName</td>
                                        <td>@user.MiddleName</td>
                                        <td>@user.LastName</td>
                                        <td>@user.EmailAddress</td>
                                        <td>@user.PhoneNumber</td>

                                        <td>
                                            <a class="btn btn-success" href="/user/edit/@user.Id"> Edit </a>
                                        </td>
                                        <td>
                                            <a class="btn btn-danger" href="/user/delete/@user.Id"> Delete </a>
                                        </td>

                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                }
                else
                {
                    <div class="alert alert-info">There is not Users List Availlable</div>
                }
            </div>
        </div>
    </div>
</div>

@code {

    private List<Countries> AllUsers { get; set; } = new();

    protected override async Task OnInitializedAsync()
    {
        await LoadAllUsers();
    }

    private async Task LoadAllUsers()
    {
        var users = await UserService.GetAllUsersAsync();
        AllUsers.Clear();

        if (AllUsers is null) return;
        foreach (var user in users)
        {
            AllUsers.Add(user);
        }
    }

}
